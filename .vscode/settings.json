{
  "python.pythonPath":"/Users/user/repository/compe_python/py37/bin/python",
  "python.autoComplete.extraPaths": [
    "/Users/user/repository/compe_python/py37/lib/python3.7/site-packages"
  ],
  // 静的解析の設定
  "python.linting.pylintEnabled": false,// 標準の静的解析をOFF
  "python.linting.flake8Enabled": true,// flake8の静的解析をON
  "python.linting.lintOnSave": true,// 保存時に静的解析を実行
  "python.linting.flake8Args": [
    "--ignore=W293, W504, E501",
    //　分岐の複雑度を20
    "--max-complexity=20"
  ],
  // コード補完の設定
  "editor.formatOnSave": true,
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    // 積極的なコード整形
    "--aggressive",
    // 行の最大文字数を200
    "--max-line-length=200"
  ]
}
